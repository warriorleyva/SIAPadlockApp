<?xml version="1.0" encoding="UTF-8"?>
<ContentPage NavigationPage.HasBackButton="false"
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SIAPadlock.ControlPage"
             Title="Panel de control">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cambiar contraseña" Order="Secondary" ></ToolbarItem>
        <ToolbarItem Text="Cerrar sesión" Order="Secondary" Clicked="CloseSession_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <StackLayout Spacing="30" Padding="20,20">  
        <Label Text="Status del candado:" FontSize="20" FontAttributes="Bold"></Label>
        <Button Text="Abrir" Clicked="Open_Clicked"></Button>
        <Button Text="Cerrar" Clicked="Close_Clicked"></Button>
    </StackLayout>
</ContentPage>
